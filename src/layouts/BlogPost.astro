---
import BaseHead from "../components/BaseHead.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import PostFooter from "../components/PostFooter.astro"

const {
	frontmatter: { title, description, date, updatedDate, heroImage },
} = Astro.props
const formattedDate = date && new Date(date).toLocaleDateString(undefined, { year: 'numeric', month: 'long', day: 'numeric' })
---

<html lang="en" class="scroll-smooth">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100">
		<Header />
		<main class="max-w-4xl mx-auto px-4 py-8">
			<article class="bg-stone-50 dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
				{heroImage && (
					<img
						class="w-full h-auto object-cover max-h-96"
						src={heroImage}
						alt={title}
					/>
				)}
				<div class="p-8">
					<h1 class="text-4xl font-bold mb-4 text-gray-900 dark:text-stone-300">{title}</h1>
					<div class="flex gap-4 text-sm text-gray-600 dark:text-gray-400 mb-6">
						{formattedDate && <time class="flex items-center gap-1">{formattedDate}</time>}
						{updatedDate && <div class="flex items-center gap-1">Last updated on <time>{updatedDate}</time></div>}
					</div>
					<hr class="border-gray-200 dark:border-gray-700 mb-6"/>
					<div class="prose prose-lg dark:prose-invert max-w-none">
						<slot />
					</div>
				</div>
			</article>
			<PostFooter {...Astro.props.frontmatter} />
		</main>
		<Footer />
	</body>
</html>
